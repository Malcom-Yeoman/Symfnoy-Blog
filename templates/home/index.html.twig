{% extends 'base.html.twig' %}

{% block title %}Symfony-Blog | Accueil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <!-- Blog -->
            <div class="col-md-8">
                <h2>Posts</h2>
                {% for post in posts %}
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <small class="text-muted">Catégorie: {{ post.category.name }}</small>
                        <br><br>
                        <p class="card-text">{{ post.content|slice(0, 150) ~ '...' }}</p>
                        <a href="{{ path('app_show_post', {'id': post.id}) }}" class="btn btn-light">Lire la suite</a>
                    </div>
                    <div class="card-footer text-muted">
                        Publié le {{ post.PublishedDate|date('d/m/Y') }} 
                    </div>
                </div>
                {% else %}
                <p>Aucun post disponible pour le moment.</p>
                {% endfor %}
            </div>

            <!-- Sidebar -->
            <div class="col-md-4">
                <h4>Filtres</h4>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Catégories</h5>
                        <ul class="list-group list-group-flush">
                        {% if categories|length > 0 %}
                            {% for category in categories %}
                                <li class="list-group-item">
                                    <a href="{{ path('app_home', {'category': category.id}) }}">{{ category.name }}</a>
                                </li>
                            {% endfor %}
                        {% else %}
                            <li class="list-group-item">Aucune catégorie disponible.</li>
                        {% endif %}
                        </ul>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Recherche</h5>
                        <form action="" method="get">
                            <div class="input-group">
                                <input type="text" class="form-control" name="query" placeholder="Rechercher...">
                                <button class="btn btn-outline-secondary" type="submit">Rechercher</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="pagination">
            {{ knp_pagination_render(posts, 'pagination/custom_pagination.html.twig') }}
        </div>
    </div>
{% endblock %}