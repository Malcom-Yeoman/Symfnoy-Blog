{% extends 'base.html.twig' %}

{% block title %}Symfony-Blog | Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    
                    <h2 class="font-weight-light text-center mb-4">Connexion</h2>
                    
                    <form method="post">
                        <div class="form-group mt-3">
                            <label for="inputEmail" class="text-muted">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-3" required autofocus>
                        </div>
                        <div class="form-group mt-3">
                            <label for="inputPassword" class="text-muted">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control mt-3" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="btn btn-primary btn-block mt-3">Connexion</button>
                    </form>

                    <div class="text-center mt-3">
                        <a href="{{ path('app_register') }}" class="text-muted">Si vous n'avez pas de compte, inscrivez-vous</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}