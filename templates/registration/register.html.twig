{% extends 'base.html.twig' %}

{% block title %}Symfony-Blog | Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h2 class="font-weight-light text-center mb-4">Inscription</h2>
                    
                    {{ form_start(registrationForm, { 'attr': { 'novalidate': 'novalidate' } }) }}
                        
                        <div class="form-group mt-3">
                            {{ form_label(registrationForm.username, 'Nom d\'utilisateur') }}
                            {{ form_widget(registrationForm.username, { 'attr': { 'class': 'form-control' } }) }}
                            {{ form_errors(registrationForm.username) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_label(registrationForm.email, 'Email') }}
                            {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control' } }) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe') }}
                            {{ form_widget(registrationForm.plainPassword.first, { 'attr': { 'class': 'form-control' } }) }}
                            {{ form_errors(registrationForm.plainPassword.first) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_label(registrationForm.plainPassword.second, 'Confirmez le mot de passe') }}
                            {{ form_widget(registrationForm.plainPassword.second, { 'attr': { 'class': 'form-control' } }) }}
                            {{ form_errors(registrationForm.plainPassword.second) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-check-input' } }) }}
                            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', { 'attr': { 'class': 'form-check-label' } }) }}
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary btn-block">Inscription</button>
                        </div>

                    {{ form_end(registrationForm) }}
                    <div class="text-center mt-3">
                        <a href="{{ path('app_login') }}" class="text-muted">Si vous avez déjà un compte, connectez-vous</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}